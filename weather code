			System.out.println("Temperature: " + weathercondition.get("temp_F") + "°F");
			System.out.println("Wind Speed: " + weathercondition.get("windspeedMiles") + " mph");
			System.out.println("Cloud Cover: " + weathercondition.get("cloudcover"));
			System.out.println("Precipitation: " + weathercondition.get("precipMM"));
		
		//Day 2
		System.out.println("");	
		System.out.println("Day 2:");	
		
		ArrayList weatherArray = (ArrayList) secondlvl.get("weather");
			
			HashMap two = (HashMap) weatherArray.get(1);
			
			System.out.println(two.get("date"));
			System.out.println("Max Temp: " + two.get("tempMaxF") + "°F");
			System.out.println("Wind Speed: " + two.get("windspeedMiles")+ " mph");
		
		//weather description
             
			
			         
			
		//Day 3
			System.out.println("");	
			System.out.println("Day 3:");

			//array weather.Array has been created previous in Day 2
			//so I am calling it a second time

		    HashMap three = (HashMap) weatherArray.get(2);
	    
		    System.out.println(two.get("date"));
			System.out.println("Max Temp: " + three.get("tempMaxF") + "°F");
			System.out.println("Wind Speed: " + three.get("windspeedMiles")+ " mph");
			
			//Day 4
			System.out.println("");	
			System.out.println("Day 4:");
			
			HashMap four = (HashMap) weatherArray.get(3);
			
			System.out.println(two.get("date"));
			System.out.println("Max Temp: " + four.get("tempMaxF") + "°F");
			System.out.println("Wind Speed: " + four.get("windspeedMiles")+ " mph");
	// Day 5
			
